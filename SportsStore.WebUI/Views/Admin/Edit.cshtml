@model SportsStore.Domain.Entities.Product

@{
    ViewBag.Title = "Admin: Edit " + @Model.Title;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var ID = Model.ID;
    var productURL = Model.URL;
}

<h1>Edit @Model.Title</h1>

@using (Html.BeginForm("Edit", "Admin", new { @Model }))
{
    @Html.EditorForModel()
    <button onclick="location.href='@Url.Action("ParseProduct", "Admin", new { ID, productURL })';return false;">Parse Product</button>
    <div class="editor-label">Image</div>
    <div class="editor-field">
        @if (Model.ThumbnailLink == null)
        {
            @:None
        }
        else
        {
            <img width="30" src="@Model.ThumbnailLink" />
        }
    </div>
    @Html.HiddenFor(x => x.ID)
    @Html.HiddenFor(x => x.ImageLinks)
    @Html.HiddenFor(x => x.ThumbnailLink)
    <input type="submit" value="Save" />
    @Html.ActionLink("Cancel and return to List", "Index")
}
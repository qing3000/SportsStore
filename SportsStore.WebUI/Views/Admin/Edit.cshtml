@model SportsStore.Domain.Entities.Product

@{
    ViewBag.Title = "Admin: Edit " + @Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var productId = Model.ProductID;
    var productURL = Model.URL;
}

<h1>Edit @Model.Name</h1>

@using (Html.BeginForm("Edit", "Admin", new { @Model }))
{
    @Html.EditorForModel()
    <button onclick="location.href='@Url.Action("ParseProduct", "Admin", new { productId, productURL })';return false;">Parse Product</button>
    <div class="editor-label">Image</div>
    <div class="editor-field">
        @if (Model.Thumbnail == null)
        {
            @:None
        }
        else
        {
            <img width="30" src="@Model.Thumbnail" />
        }
    </div>
    @Html.HiddenFor(x => x.ProductID)
    @Html.HiddenFor(x => x.ImageLinks)
    @Html.HiddenFor(x => x.Thumbnail)
    <input type="submit" value="Save" />
    @Html.ActionLink("Cancel and return to List", "Index")
}